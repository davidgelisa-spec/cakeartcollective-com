---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { siteConfig } from '../../data/siteConfig';
import Flourish from '../../components/ui/Flourish.astro';
import PaintedEdge from '../../components/ui/PaintedEdge.astro';
---

<BaseLayout
  title="Contact"
  description="Get in touch to order a custom cake or enquire about classes."
>
  <!-- Hero -->
  <section class="section-deep section-deep-top">
    <div class="max-w-7xl mx-auto px-6 py-14 md:py-20">
      <Flourish variant="light" class="justify-start py-4 mb-4" />
      <p class="font-accent text-3xl md:text-4xl text-primary-light mb-3">I'd love to hear from you</p>
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl text-bg mb-4">Get in touch</h1>
      <p class="text-primary-light/80 max-w-lg leading-relaxed">
        Have a cake in mind or a question about classes? I'd love to hear from you.
      </p>
    </div>
  </section>
  <PaintedEdge fill="#F7F5EE" />

  <!-- Contact -->
  <section class="max-w-7xl mx-auto px-6 py-12 md:py-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24">
      <!-- Form -->
      <div>
        <form class="space-y-6" action="https://formspree.io/f/mreaoaep" method="POST">
          <div>
            <label for="name" class="block text-[11px] tracking-[0.15em] uppercase text-text-secondary mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-0 py-3 border-0 border-b border-border bg-transparent text-text focus:outline-none focus:border-primary transition-colors"
            />
          </div>

          <div>
            <label for="email" class="block text-[11px] tracking-[0.15em] uppercase text-text-secondary mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-0 py-3 border-0 border-b border-border bg-transparent text-text focus:outline-none focus:border-primary transition-colors"
            />
          </div>

          <div>
            <label for="subject" class="block text-[11px] tracking-[0.15em] uppercase text-text-secondary mb-2">Subject</label>
            <select
              id="subject"
              name="subject"
              class="w-full px-0 py-3 border-0 border-b border-border bg-transparent text-text focus:outline-none focus:border-primary transition-colors"
            >
              <option value="">Select a topic</option>
              <option value="cake">Cake enquiry</option>
              <option value="classes">Class enquiry</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-[11px] tracking-[0.15em] uppercase text-text-secondary mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-0 py-3 border-0 border-b border-border bg-transparent text-text focus:outline-none focus:border-primary transition-colors resize-none"
            ></textarea>
          </div>

          <div class="pt-4">
            <button
              type="submit"
              class="text-[11px] tracking-[0.2em] uppercase text-text border-b border-text pb-1 hover:text-primary hover:border-primary transition-colors"
            >
              Send message
            </button>
          </div>
        </form>
      </div>

      <!-- Info -->
      <div class="space-y-10">
        <div>
          <h3 class="font-accent text-4xl text-text-secondary mb-3">Email</h3>
          <a
            href={`mailto:${siteConfig.email}`}
            class="text-text hover:text-primary transition-colors"
          >
            {siteConfig.email}
          </a>
        </div>

        <div>
          <h3 class="font-accent text-4xl text-text-secondary mb-3">Social</h3>
          <a
            href={siteConfig.social.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text hover:text-primary transition-colors"
          >
            Instagram
          </a>
        </div>

        <div>
          <h3 class="font-accent text-4xl text-text-secondary mb-3">Location</h3>
          <p class="text-text-secondary">
            Based in the UK.<br />
            In-person and online options available.
          </p>
        </div>
      </div>
    </div>
  </section>

  <Flourish />
</BaseLayout>
